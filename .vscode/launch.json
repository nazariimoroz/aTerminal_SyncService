{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (CMake target) [gdb]",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "cwd": "${command:cmake.launchTargetDirectory}",
      "args": [ "--configFile=\"/home/ani/Source/Repos/aTerminal_SyncService/aTerminal_SyncService/config/debug.properties\"" ],
      "stopAtEntry": false,
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
